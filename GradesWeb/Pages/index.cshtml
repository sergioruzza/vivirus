@page

@{
 Layout = "Shared/_LoginLayout.cshtml";
}

@model GradesWeb.Pages.IndexModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<body>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Log In</h5>
            <form class="form-signin" method="POST">
              <div class="form-label-group">
                <input asp-for="Account" class="form-control" placeholder="Cuenta" required autofocus>
              </div>
              <div class="form-label-group">
                <input asp-for="Password" class="form-control" placeholder="Contraseña" required>
              </div>
              <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Log in</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  @if (Model.Error)
  {
      <p> Usuario o contraseña no validos </p>
  }

</body> 